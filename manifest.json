{
  "manifest_version": 3,
  "name": "TaskMate",
  "version": "1.0",
  "description": "A minimalist yet powerful to-do list manager Chrome extension",
  "permissions": [
    "storage",
    "notifications"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
